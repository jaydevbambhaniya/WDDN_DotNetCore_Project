@model DiscussionForum.Models.ApplicationUser
@{
}
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{     
    bool hidden = false;
    if (ViewBag.Questions.Count == 0)
    {
        hidden = true;
    }
    var Questions = ViewBag.Questions as List<Questions>;
    var photoPath = "data:image/png;base64,";
    if (Model.ProfilePicture != null)
    {
        photoPath = Model.ProfilePicture;
    }

}
<link href="~/css/Main.css" rel="stylesheet" />
<link rel="stylesheet" href="lib/bootstrap/css/bootstrap.min.css" />
<style>
    a:hover {
        color: black;
    }
    .side{
        flex:1
    }
</style>

<body>
    <nav class="navbar fixed-navbar navbar-expand-xl navbar-toggleable-sm navbar-light bg-grey border-bottom box-shadow mb-3" style="width: 100%; z-index: 9999">
        <div class="container">
            


<img src="https://cdn4.iconfinder.com/data/icons/got-an-idea/128/discussion-512.png" Style="height: 70px; margin-right: 20px;" />
               
            <label style="color:white;font-size:25px">Discussion Forum</label>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                </ul>
            </div>
        </div>
        <div style="align-items: flex-end; margin-top: -10px;">
            <a style="float: right;text-decoration:none;" asp-controller="Customer" asp-action="Index" class="create-btn" id="home">Home</a>
        </div>
        <div style="align-items: flex-end; margin-top: -10px;">
            <a style="float: right; width: 100px; text-decoration: none;" asp-controller="Home" asp-action="AboutUs" class="create-btn" id="AboutUs">About Us</a>
        </div>
        <div style="align-items: flex-end; margin-top: -10px;">
            <a style="float: right; width: 120px; text-decoration: none;" asp-controller="Home" asp-action="ContactUs" class="create-btn" id="ContactUs">Contact Us</a>
        </div>
        <div style="align-items: flex-end; margin-top: -10px;">
            <a style="float: right; text-decoration: none;width:135px" asp-controller="Customer" asp-action="Create" class="create-btn" id="create">Create Query</a>
        </div>
    </nav>

    <div style="display:inline;float:right;width:41%">
        <form asp-action="Index" asp-controller="Customer">
            <input name="SearchText" id="SearchText" style="border-radius:3px;border:none;height:35px;width :70%;padding-left:5px;background-color:black" placeholder="Search Something..." />
            <button style="height:35px;background-color:#03bfbc;  border: 1px solid #03bfbc;border-radius: 3px;font-family: Montserrat, sans-serif;cursor: pointer;">Search</button>
        </form>
    </div>

    <div class="container" style="display: flex; justify-content: space-between">
        <section>
            <div class="card-container" style="margin-left: -60px;">
                <div class="cover-photo">
                            <img src="@photoPath" class="profile"/>
                </div>
                <div class="profile-name">
                    <label id="Handle">@Model.UserName</label>
                </div>
                <p class="about">
                    <label id="Name">@Model.Name</label>
                </p>
                <p class="about">
                    <label id="Email">@Model.Email</label>
                </p>
                <a asp-controller="Customer" asp-action="UpdateProfile" class="update-btn" style="text-decoration:none;">Update Profile</a>
                <a asp-controller="Customer" asp-action="Logout" class="logout-btn" style="text-decoration: none;">Logout</a>
            </div>
        </section> <div>
        @{ if(hidden == true){
                <div style="margin-right:335px">
            <label style="color:white;text-align:center;font-size:25px">No result found!</label>
            </div>
            }}
        @{  if (hidden==false)
            {
            <div id="main"style="margin-top: 60px;">

                @{ foreach (var question in Questions)
                    {
                        <div class="cards">
                            <article class="card" style="display: grid; grid-template-columns: 1fr 1fr; grid-gap: 20px; ">
                                <div class="side" style="height:inherit;padding:10px" >
                                    <img style="object-fit:scale-down;height:100%;border-radius:5px;" src="@question.ImagePath" alt="Image" />
                                </div>
                                <div style="text-align: center;">
                                    <header>
                                        <h2>
                                            <label id="Label3" class="card-title">@question.QTitle</label><br />
                                        </h2>
                                    </header>
                                    <div class="block-ellipsis side" style="margin-top:25px">
                                        <label id="Label2">@question.QDescr</label>
                                    </div>

                                    <a asp-controller="Customer" asp-action="QuestionDetails" asp-route-id="@question.QId" style="clear:both;float:right;position:absolute;bottom:0px;right:0px">Read More...</a>
                                </div>
                            </article>
                        </div>
                    }
                }
            </div>
            }<br/><br /><br />
                    }
        </div>
                    
    </div>
</body>